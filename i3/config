bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# For when plugging in a projector or something
bindsym $mod+Shift+p exec xrandr --output HDMI1 --auto --right-of eDP1

bindsym $mod+Print exec scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
bindsym $mod+Shift+Print exec deepin-screenshot

# Make shortcut to switch GPUs ez
bindsym $mod+Shift+g exec --no-startup-id optimus-manager --switch auto --no-confirm

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		i3bar_command i3bar --transparency
        status_command i3status | ~/.config/i3status/wrapper.py
		position top

		colors {
			background #000000A0
		}
}

set $Locker i3lock -c 000000 -i $(find ~/.wallpaper/lock -type f | shuf -n1)


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"

# music (CMus)
set $mode_music Music (b) Next, (c) Play/Pause, (z) Prev, (r) Repeat, (+) Volume Up, (-) Volume Down
mode "$mode_music" {
	bindsym b exec --no-startup-id cmus-remote --next
	bindsym c exec --no-startup-id cmus-remote --pause, mode "default"
	bindsym z exec --no-startup-id cmus-remote --prev
	bindsym r exec --no-startup-id cmus-remote --repeat, mode "default"
	bindsym plus exec --no-startup-id cmus-remote --volume +10%
	bindsym minus exec --no-startup-id cmus-remote --volume -10%

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_music"
bindsym $mod+Shift+m exec konsole -e cmus

# Brightness
set $mode_brightness Brightness (+) +5, (-) -5, (f) Full, (z) Off, (d) Dim, (m) medium
mode "$mode_brightness" {
	bindsym plus exec xbacklight +5
	bindsym minus exec xbacklight -5
	bindsym f exec xbacklight =100, mode "default"
	bindsym z exec xbacklight =0, mode "default"
	bindsym d exec xbacklight =1, mode "default"
	bindsym m exec xbacklight =50, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+b mode "$mode_brightness"


